<%- include('../../partials/admin/head.ejs') %> 
<div class="container">
    <h2 class="page-title mt-2">Edit Food Menu</h2>
    <a href="#" class="btn btn-primary mt-2 mb-3">Back to All Food Menu</a>

    <form action="<%= food._id %> " method="POST">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= food.title %>" placeholder="Title">
        </div>

        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" class="form-control" name="slug" value="<%= food.slug %>" placeholder="Slug">
        </div>

        <div class="form-group">
            <label for="">Category</label>
            <select name="category" class="form-control">
                <% categorys.forEach(cat => { %>
                    <option value="<%= cat.slug %>"><%= cat.title %> </option>
                <%  }); %> 
            </select>
        </div>

        <div class="form-group">
            <label for="">Price</label>
            <input type="text" class="form-control" name="price" value="<%= food.price %>" placeholder="Price">
        </div>

        <div class="form-group">
            <label for="">Description Sort</label>
            <textarea name="description" class="form-control" cols="30" rows="10" placeholder="Description"><%= food.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary mb-5">Submit</button>
    </form>
</div>
<%- include('../../partials/footer.ejs') %>