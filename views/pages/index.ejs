            <% for(let i=0; i<4 ; i++) { %> 
            <div class="cat">
              <div class="card" style="width: 18rem;">
                <img src="/images/<%= food[i].image %> " class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= food[i].title %> </h5>
                  <p class="card-text"><%= food[i].description %> </p>
                  <h4>à§³ <%= food[i].price %></h4>
