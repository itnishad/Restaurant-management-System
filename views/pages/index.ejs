<%- include('../playground/head.ejs') %>



<div class="my-container">

  <div id="section1">
    <section>
      <div class="hero acontainer">
        <div>
          <h1>Hello, <span></span></h1>
          <h1>Are You Hungry? <span></span></h1>
          <h1> Don't Wait! <span></span></h1>
          <a href="#" type="button" class="cta">Order Now</a>
        </div>
      </div>
    </section>
  </div>

  <div id="section2">
